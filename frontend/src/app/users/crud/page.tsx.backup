                  console.log('Edit user:', rowData);
                  // You can implement inline editing here
                });
              }
              
              if (deleteBtn) {
                deleteBtn.addEventListener('click', () => {
                  const rowData = instance.getSourceDataAtRow(row);
                  console.log('Delete user:', rowData);
