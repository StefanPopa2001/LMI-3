        autoRowSize: true,
        
        // Merge cells capability
        mergeCells: true,
        
        // Comments
        comments: true,
        
        // Custom borders
        customBorders: true,
        
        // Multi-column sorting
        multiColumnSorting: true,
        
        // Hidden rows/columns
        hiddenRows: true,
        hiddenColumns: true,
        
                // Nested headers support
        nestedHeaders: [
          ['ID', 'Email', 'Name', 'Actions']
        ],
        
        // Cell selection
