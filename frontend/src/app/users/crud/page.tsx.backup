        width: '100%',
        
        // Column features
        manualColumnResize: true,
        manualColumnMove: true,
        columnSorting: true,
        
        // Row features  
        manualRowResize: true,
        manualRowMove: true,
        
        // Filtering
        filters: true,
        dropdownMenu: true,
        
        // Context menu with full options
        contextMenu: {
